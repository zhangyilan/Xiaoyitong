<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">


    <ImageView
        android:id="@+id/libiao_recy_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        />

    <RelativeLayout
        android:id="@+id/gw_item_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/recy_xiangxi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginRight="25dp"
            android:textSize="15dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/recy_xinghao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="13dp"
            android:layout_marginRight="25dp"
            android:lines="1"
            android:layout_below="@id/recy_xiangxi"
            android:ellipsize="end"
            android:layout_above="@+id/recy_text" />
        <TextView
            android:id="@+id/recy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:text="Â¥"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/recy_danjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#F00"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/recy_text"
            android:layout_marginBottom="10dp"/>
</RelativeLayout>
</LinearLayout>
