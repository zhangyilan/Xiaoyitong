<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/topbar" />

    <ui.test.cn.xiaoyitong.customControls.MainScrollView
        android:id="@+id/swipe_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/layout_cloud_detailed_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@mipmap/ic_launcher" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BEBEBE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/layout_cloud_detailed_title_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文档标题:" />

                <TextView
                    android:id="@+id/layout_cloud_detailed_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_cloud_detailed_title_title"
                    android:text="追到我就让你嘿嘿嘿" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BEBEBE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/layout_cloud_detailed_nickname_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户昵称:" />

                <TextView
                    android:id="@+id/layout_cloud_detailed_detailed_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_cloud_detailed_nickname_title"
                    android:text="先开机" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BEBEBE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/layout_cloud_detailed_phonenumber_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话:" />

                <TextView
                    android:id="@+id/layout_cloud_detailed_phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_cloud_detailed_phonenumber_title"
                    android:text="13558550380" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BEBEBE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/layout_cloud_detailed_paginalnumber_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="页数:" />

                <TextView
                    android:id="@+id/layout_cloud_detailed_paginalnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_cloud_detailed_paginalnumber_title"
                    android:text="9527" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BEBEBE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/layout_cloud_detailed_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送达地址:" />

                <TextView
                    android:id="@+id/layout_cloud_detailed_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_cloud_detailed_address_title"
                    android:text="交院2栋313" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BEBEBE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/layout_cloud_detailed_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打印类型:" />

                <TextView
                    android:id="@+id/layout_cloud_detailed_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_cloud_detailed_type_title"
                    android:text="单面打印" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BEBEBE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/layout_cloud_detailed_servicetime_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送达时间:" />

                <TextView
                    android:id="@+id/layout_cloud_detailed_servicetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_cloud_detailed_servicetime_title"
                    android:text="05/12 13:30" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BEBEBE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/layout_cloud_detailed_color_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="色彩:" />

                <TextView
                    android:id="@+id/layout_cloud_detailed_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_cloud_detailed_color_title"
                    android:text="黑白" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BEBEBE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/layout_cloud_detailed_univalent_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单价/每页:" />

                <TextView
                    android:id="@+id/layout_cloud_detailed_univalent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_cloud_detailed_univalent_title"
                    android:text="0.20" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BEBEBE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/layout_cloud_detailed_total_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价:" />

                <TextView
                    android:id="@+id/layout_cloud_detailed_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout_cloud_detailed_total_title"
                    android:text="15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BEBEBE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/layout_cloud_detailed_contact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FF0000"
                    android:text="联系Ta" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#00FF00" />

                <Button
                    android:id="@+id/layout_cloud_detailed_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FF0000"
                    android:text="确认" />
            </LinearLayout>
        </LinearLayout>
    </ui.test.cn.xiaoyitong.customControls.MainScrollView>
</LinearLayout>
