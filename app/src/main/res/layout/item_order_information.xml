<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ui.test.cn.xiaoyitong.CircleImageView.CircleImageView
        android:id="@+id/recyclerview_order_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        app:border_width="2dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/recycelrview_order_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text=""/>
            <TextView
                android:id="@+id/recycelrview_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="订单类型"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/recycelrview_order_type_title"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/recyclerview_order_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="订单时间:"/>
            <TextView
                android:id="@+id/recyclerview_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="05/12 13:30"
                android:textSize="18dp"
                android:layout_toRightOf="@+id/recyclerview_order_time_title"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/recyclerview_order_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户:"/>

            <TextView
                android:id="@+id/recyclerview_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/recyclerview_order_status_title"
                android:text="待评价"/>

            <TextView
                android:id="@+id/recyclerview_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
