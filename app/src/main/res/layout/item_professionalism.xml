<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/item_professionalism_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/ic_launcher"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/item_professionalism_subject"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="主题" />

        <TextView
            android:id="@+id/item_professionalism_department"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:text="部门"/>

        <TextView
            android:id="@+id/item_professionalism_finish"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:text="状态"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="3">
            <TextView
                android:id="@+id/item_professionalism_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:text="分值"/>

            <TextView
                android:id="@+id/item_professionalism_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/item_professionalism_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:textColor="#FF5151"
                android:textSize="12dp"
                android:text="招募中"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
