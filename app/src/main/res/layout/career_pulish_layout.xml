<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="24dp"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="学校："
                    android:textColorHint="#AAAAAA" />

                <TextView
                    android:id="@+id/career_publish_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="45dp"
                    android:textSize="20dp"
                    android:background="@null"
                    android:hint="            请选择      ▼"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="系部："
                    android:textColorHint="#AAAAAA" />

                <TextView
                    android:id="@+id/career_publish_Department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:background="@null"
                    android:textSize="20dp"
                    android:layout_marginTop="8dp"
                    android:hint="                  请选择▼"

                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="部门："
                    android:textColorHint="#AAAAAA" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/career_publish_ministry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:textSize="20dp"
                    android:background="@null"
                    android:hint="                  请选择▼"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间："
                    android:layout_marginTop="8dp"
                    android:textColorHint="#AAAAAA" />

                <TextView
                    android:id="@+id/career_publish_starttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:textSize="20dp"
                    android:hint="                  请选择▼"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间："
                    android:layout_marginTop="8dp"
                    android:textColorHint="#AAAAAA" />

                <TextView
                    android:id="@+id/career_publish_stoptime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:textSize="20dp"
                    android:hint="                  请选择 ▼"
                    android:layout_marginLeft="16dp"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分值："
                    android:layout_marginTop="8dp"
                    android:textColorHint="#AAAAAA" />

                <TextView
                    android:id="@+id/career_publish_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:textSize="20dp"
                    android:hint="                  请选择▼"
                    android:layout_marginLeft="45dp"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="标准类型："
                    android:textColorHint="#AAAAAA" />

                <TextView
                    android:id="@+id/career_publish_standclass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="8dp"
                    android:textSize="20dp"
                    android:hint="                  请选择▼"
                    android:layout_marginLeft="16dp"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标准项目："
                    android:layout_marginTop="8dp"
                    android:textColorHint="#AAAAAA" />

                <TextView
                    android:id="@+id/career_publish_standproject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:textSize="20dp"
                    android:hint="                  请选择▼"
                    android:textColor="#AAAAAA"
                    android:layout_marginTop="8dp"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <Button
                android:id="@+id/career_publish_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn"
                android:text="下一步"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

        </LinearLayout>

     </ScrollView>
</LinearLayout>