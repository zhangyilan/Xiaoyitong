<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学校："
                    android:textColorHint="#AAAAAA" />

                <EditText
                    android:id="@+id/career_publish_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_gray_selector"
                    android:hint="请选择      ▼"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系部："
                    android:textColorHint="#AAAAAA" />

                <EditText
                    android:id="@+id/career_publish_Department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_gray_selector"
                    android:hint="请选择      ▼"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="部门："
                    android:textColorHint="#AAAAAA" />

                <EditText
                    android:id="@+id/career_publish_ministry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_gray_selector"
                    android:hint="请选择      ▼"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间："
                    android:textColorHint="#AAAAAA" />

                <EditText
                    android:id="@+id/career_publish_starttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_gray_selector"
                    android:hint="请选择      ▼"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间："
                    android:textColorHint="#AAAAAA" />

                <EditText
                    android:id="@+id/career_publish_stoptime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_gray_selector"
                    android:hint="请选择      ▼"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分值："
                    android:textColorHint="#AAAAAA" />

                <EditText
                    android:id="@+id/career_publish_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_gray_selector"
                    android:hint="请选择      ▼"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标准类型："
                    android:textColorHint="#AAAAAA" />

                <EditText
                    android:id="@+id/career_publish_standclass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_gray_selector"
                    android:hint="请选择      ▼"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标准项目："
                    android:textColorHint="#AAAAAA" />

                <EditText
                    android:id="@+id/career_publish_standproject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_gray_selector"
                    android:hint="请选择      ▼"
                    android:textColor="#AAAAAA"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地点："
                    android:textColorHint="#AAAAAA" />

                <EditText
                    android:id="@+id/career_publish_adress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:hint="请输入地点"
                    android:textColor="#AAAAAA"
                    android:maxLines="2"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>
            <Button
                android:id="@+id/career_publish_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn"
                android:text="下一步"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>